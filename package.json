{
  "private": true,
  "workspaces": [
    "web"
  ],
  "scripts": {
    "postinstall": "cd workers && poetry install",
    "build": "yarn web:build && yarn workers:build",
    "dev": "npx concurrently \"yarn web:dev\" \"yarn workers:dev\" -n web,workers",
    "web:build": "cd web && yarn build",
    "web:dev": "cd web && yarn dev",
    "workers:build": "cd workers && poetry run build-check",
    "workers:dev": "cd workers && poetry run python -m uvicorn fund_public_goods.main:app --reload"
  },
  "dependencies": {
    "concurrently": "8.2.2"
  }
}
